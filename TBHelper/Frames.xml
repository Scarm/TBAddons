								</Anchor>
								<Anchor point="TOPRIGHT" relativepoint="BOTTOMRIGHT">
									<Offset>
										<AbsDimension x="-10"/>
									</Offset>
								</Anchor>
							</Anchors>					
						</FontString>						
					</Layer>
				</Layers>				
				<Scripts>
					<OnReceiveDrag>
						TBHelperOnReceiveDrag(self)				
					</OnReceiveDrag>				
				</Scripts>		
			</Frame>
			<Frame name="TBHelperUniqueFrame" enableMouse="true">
				<Anchors>
					<Anchor point="LEFT" >
						<Offset>
							<AbsDimension x="515"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="250" y="20" />
				</Size>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentTex" parentKey="Tex">	
							<Anchors>
								<Anchor point="TOPLEFT"/>
								<Anchor point="BOTTOMRIGHT"/>
							</Anchors>
							<Color g="1" r="0" b="0" a = "1"/>                    
						</Texture>
					</Layer>
					<Layer>
						<FontString name="$parentText" inherits="GameFontNormal" text = "Уникальные">
							<Size>
								<AbsDimension y="20"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT"/>
								<Anchor point="RIGHT"/>
							</Anchors>					
						</FontString>
						<FontString name="$parentList" inherits="GameFontNormal" text = "Хрень">
							<Size>
								<AbsDimension y="20"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativepoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension y="-10"/>
									</Offset>
								</Anchor>
								<Anchor point="TOPRIGHT" relativepoint="BOTTOMRIGHT">
									<Offset>
										<AbsDimension x="-10"/>
									</Offset>
								</Anchor>
							</Anchors>					
						</FontString>
					</Layer>
				</Layers>				
				<Scripts>
					<OnReceiveDrag>
						TBHelperOnReceiveDrag(self)				
					</OnReceiveDrag>				
				</Scripts>		
			</Frame>			
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("RightButton")
			
				TBSubscribeEvent(self,"LEARNED_SPELL_IN_TAB", "TBPrintEvent")
				TBSubscribeEvent(self,"PLAYER_LOGIN", "TBHelperOnPlayerLogin")
				TBSubscribeEvent(self,"ACTIVE_TALENT_GROUP_CHANGED", "TBHelperOnTalentChanged")
				TBSubscribeEvent(self,"PLAYER_LOGIN", "TBPrintEvent")
				TBSubscribeEvent(self,"SPELLS_CHANGED", "TBPrintEvent")
			</OnLoad> 
            <OnDragStart>
				self:StartMoving()
            </OnDragStart>
            <OnDragStop>
				self:StopMovingOrSizing()
            </OnDragStop>
            <OnEvent>
				TBHelperOnEvent(self,event,...)
			</OnEvent>
		</Scripts> 		
	</Frame>
</Ui>