					<Layer>
						<FontString name="$parentText" inherits="GameFontNormal" text = "Баффы">
							<Size>
								<AbsDimension y="20"/>
							</Size>
							<Anchors>
								<Anchor point="LEFT"/>
								<Anchor point="RIGHT"/>
							</Anchors>					
						</FontString>
						<FontString name="$parentList" inherits="GameFontNormal" text = "Хрень">
							<Size>
								<AbsDimension y="20"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT" relativepoint="BOTTOMLEFT">
									<Offset>
										<AbsDimension y="-10"/>
